<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="spalenza_promo_hints" resource="default" engine="innodb" comment="Promo Hints Table">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="int" name="rule_id" unsigned="true" nullable="false" comment="Rule ID"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="int" name="store_id" unsigned="true" nullable="false" default="0"
                comment="Store ID"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP"
                on_update="true" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="SPALENZA_PROMO_HINTS_RULE_ID"
                    table="spalenza_promo_hints" column="rule_id"
                    referenceTable="salesrule" referenceColumn="rule_id" onDelete="CASCADE"/>

        <constraint xsi:type="foreign" referenceId="SPALENZA_PROMO_HINTS_PRODUCT_ID"
                    table="spalenza_promo_hints" column="product_id"
                    referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>

        <constraint xsi:type="foreign" referenceId="SPALENZA_PROMO_HINTS_STORE_ID"
                    table="spalenza_promo_hints" column="store_id"
                    referenceTable="store" referenceColumn="store_id" onDelete="CASCADE"/>

        <constraint xsi:type="unique" referenceId="SPALENZA_PROMO_HINTS_RULE_PRODUCT_STORE">
            <column name="rule_id"/>
            <column name="product_id"/>
            <column name="store_id"/>
        </constraint>

        <index referenceId="SPALENZA_PROMO_HINTS_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>

        <index referenceId="SPALENZA_PROMO_HINTS_RULE_ID" indexType="btree">
            <column name="rule_id"/>
        </index>

        <index referenceId="SPALENZA_PROMO_HINTS_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
</schema>
